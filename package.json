{
  "name": "ignore-hub",
  "version": "0.2.0",
  "description": "Interactive OpenTUI wizard to generate .gitignore from github/gitignore",
  "type": "module",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "bun run --watch src/index.tsx",
    "start": "bun run src/index.tsx",
    "test": "bun test",
    "typecheck": "bunx tsc --noEmit",
    "prepublishOnly": "bun run typecheck && bun run test",
    "check": "ultracite check",
    "fix": "ultracite fix"
  },
  "bin": {
    "ignore-hub": "./src/index.tsx",
    "ih": "./src/index.tsx"
  },
  "files": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "engines": {
    "bun": ">=1.2.0"
  },
  "dependencies": {
    "@opentui/core": "^0.1.79",
    "@opentui/react": "^0.1.79",
    "react": "^19.2.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.0",
    "@types/bun": "latest",
    "@types/react": "^19.2.2",
    "ultracite": "7.2.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
